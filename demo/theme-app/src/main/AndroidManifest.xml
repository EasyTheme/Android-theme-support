<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="theme.support.demo">

    <application
        android:name="theme.support.demo.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="theme.support.demo.MainActivity"
            android:theme="@style/BaseAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="theme.support.demo.basic.WidgetActivity" />

        <activity android:name="theme.support.demo.test.TestActivity" />

        <activity
            android:name="theme.support.demo.mdtab.CollapsingToolbarLayoutActivity"
            android:label="CollapsingToolbarLayoutActivity" />

        <activity
            android:name="theme.support.demo.mdtab.MaterialDesignActivity"
            android:label="Material Design" />

    </application>

</manifest>
