<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ximsfei.skindemo">

    <application
        android:name="com.ximsfei.skindemo.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.ximsfei.skindemo.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ximsfei.skindemo.tab.MainActivity" />

        <activity
            android:name="com.ximsfei.skindemo.settings.SettingsActivity"
            android:label="SettingsActivity" />

        <activity
            android:name="com.ximsfei.skindemo.mdtab.CollapsingToolbarLayoutActivity"
            android:label="CollapsingToolbarLayoutActivity" />

        <activity
            android:name="com.ximsfei.skindemo.constraint.ConstraintLayoutActivity"
            android:label="ConstraintLayoutActivity" />

        <activity
            android:name="com.ximsfei.skindemo.alert.AlertDialogActivity"
            android:label="AlertDialogActivity"
            android:theme="@style/AlertDialogTheme" />

        <activity
            android:name="com.ximsfei.skindemo.mdtab.MaterialDesignActivity"
            android:label="Material Design"
            android:theme="@style/MaterialDesignTheme" />

        <!-- flycotablayout -->
        <activity
            android:name=".flycotablayout.ui.SimpleHomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".flycotablayout.ui.CommonTabActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".flycotablayout.ui.SlidingTabActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".flycotablayout.ui.SegmentTabActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
